@{
    ViewData["Title"] = "Home Page";
}

<style>
    label {
        color: whitesmoke;
    }

    .editor {
        width: 500px;
        height: 300px;
    }

    .item1 {
        grid-area: editora;
        width: 500px;
    }

    .item2 {
        grid-area: editorb;
        width: 500px;
    }

    .item3 {
        grid-area: editorc;
        width: 500px;
    }

    .item4 {
        grid-area: preview;
    }


    .grid-container {
        display: grid;
        grid-template-columns: 500px 700px;
        grid-template-areas: 
            'editora preview preview'
            'editorb preview preview'
            'editorc preview preview';
        gap: 10px;
        background-color: #202020;
        padding: 10px;
    }

    #previewOutput {
        width: 100%;
        height: 97.5%;
    }

</style>

<div class="grid-container">
    <div class="item1" width="500px">
        <label for="htmlEditor">HTML</label>
        <div class="editor" id="htmlEditor"></div>
    </div>
    
    <div class="item2" width="500px">
        <label for="cssEditor">CSS</label>
        <div class="editor" id="cssEditor">body{ background-color: #303030; }
        </div>
    </div>
    
    <div class="item3" width="500px">
        <label for="jsEditor">JavaScript</label>
        <div class="editor" id="jsEditor"></div>
    </div>
   
    <div class="item4" id="preview">
        <label for="previewOutput">Preview</label>

        <iframe id="previewOutput" src="\default.asp">
        </iframe>
    </div>
</div>
